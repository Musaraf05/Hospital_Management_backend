{
    "compilerOptions": {
      "experimentalDecorators": true,
      "module": "commonjs",
      "target": "ES2020",
      "lib": ["es2020"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "@nestjs/*": ["node_modules/@nestjs/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  